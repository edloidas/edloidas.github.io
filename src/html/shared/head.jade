head
  meta( charset="UTF-8" )
  meta( name="viewport", content="width=device-width, initial-scale=1.0" )

  title edloidas
  
  link( rel="shortcut icon", href="img/favicon.png" type="image/png" )

  link( rel="profile", href="https://plus.google.com/100081532988366318441" )
  link( rel="publisher", href="https://plus.google.com/100081532988366318441" )
  
  meta( name="description", content="#{personal.name} #{personal.surname}. JavaScript &amp; 3d graphics." )
  

  
  //- Open Graph and Twitter
  mixin preview( graph, type )
    meta( property="#{graph}:#{type}", content="website" )
    meta( property="#{graph}:title", content="#{personal.name} #{personal.surname}" )
    meta( property="#{graph}:image", content="https://www.gravatar.com/avatar/baeb8c35c5030b4973a46e320ac3af5c" )
    meta( property="#{graph}:description", content="#{personal.name} #{personal.surname}. A #{age}-year old web developer and 3D graphics enthusiast from Minsk, Belarus." )
    
  +preview( "og", "type" )
  +preview( "twitter", "card" )

  link( rel="stylesheet", type="text/css", href="styles/style.css" )
  
  script( src="js/shared.js", defer )
  script( src="js/app.js", defer )
